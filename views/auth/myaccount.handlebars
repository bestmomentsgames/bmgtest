    {{>_navbar}}
    
    <!-- Account Box User Account -->

    <div class="container">
        <div class="row mt-5">
            <div class="col-lg-4 col-md-3"></div>
            <div class="col-lg-4 col-md-6 col-sm-8 account-box-user-account">
              {{#if error}}
                <div class="alert alert-danger">{{this.error}}</div>
              {{else}}
              {{/if}}
              {{>_msg}}
              <h4 class="mb-4">Enter your account</h4>
              <form action="/auth/login" method="post">
                  <input class="input-class mb-3" type="email" name="email" placeholder="Email" required>
                  <input class="input-class mb-3" type="password" name="password" placeholder="Password" required>
                  <button type="submit">Enter</button>
                
                
                  <a href="/auth/google" class="google btn-social-media mt-4">
                    <span class="social-media-icon"><i class="fa fa-google fa-fw"></i></span> <span class="social-media-text">Login with Google</span>
                  </a>
                  <a href="/auth/facebook" class="fb btn-social-media mt-2 mb-3">
                    <span class="social-media-icon"><i class="fa fa-facebook fa-fw"></i></span> <span class="social-media-text">Login with Facebook</span>
                  </a><br>
                  
                  
                  <a href="/auth/signup">Don't have an account?</a><br><br>
                  <a href="/auth/recover-password">Recover your password</a>
              </form>
            </div>
            <div class="col-lg-4 col-md-3"></div>
        </div>
    </div>

    <!-- Account Box User Account - End -->

    {{>_footer}}


   